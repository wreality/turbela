{
    "name": "wreality/turbela-backend",
    "type": "project",
    "description": "PHP Backend for the Turbela management platform.",
    "keywords": [
        "makerspace",
        "CRM"
    ],
    "license": "MIT",
    "require": {
        "php": "^8.0",
        "guzzlehttp/guzzle": "^7.0.1",
        "laravel/cashier": "^13.16",
        "laravel/framework": "^9.0",
        "laravel/horizon": "^5.19",
        "laravel/sanctum": "^2.11",
        "laravel/scout": "^9.2",
        "laravel/tinker": "^2.5",
        "mattvb91/uniquewith-validator": "^3.4",
        "mustache/mustache": "^2.14",
        "nuwave/lighthouse": "^6",
        "owen-it/laravel-auditing": "^13.5",
        "predis/predis": "^2.2",
        "protonemedia/laravel-cross-eloquent-search": "^3.1",
        "robsontenorio/laravel-keycloak-guard": "^1.5",
        "silber/bouncer": "^1.0",
        "spatie/laravel-medialibrary": "^9.0.0",
        "spatie/laravel-settings": "^3.2",
        "teamtnt/laravel-scout-tntsearch-driver": "^11.5",
        "watson/validating": "^7.0"
    },
    "require-dev": {
        "barryvdh/laravel-ide-helper": "^2.10",
        "brianium/paratest": "^6.4",
        "cakephp/cakephp-codesniffer": "^4.5",
        "dealerdirect/phpcodesniffer-composer-installer": "^0.7.1",
        "fakerphp/faker": "^1.9.1",
        "laravel/telescope": "^4.16",
        "mll-lab/laravel-graphiql": "^1.2",
        "mll-lab/laravel-graphql-playground": "^2.5",
        "mockery/mockery": "^1.4.2",
        "nunomaduro/collision": "^6.1",
        "phpunit/phpunit": "^9.3.3",
        "sirbrillig/phpcs-variable-analysis": "^2.11",
        "spatie/laravel-ignition": "^1.0",
        "squizlabs/php_codesniffer": "^3.6"
    },
    "autoload": {
        "psr-4": {
            "App\\": "app/",
            "Database\\Factories\\": "database/factories/",
            "Database\\Seeders\\": "database/seeders/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "post-autoload-dump": [
            "Illuminate\\Foundation\\ComposerScripts::postAutoloadDump",
            "@php artisan package:discover --ansi"
        ],
        "post-root-package-install": [
            "@php -r \"file_exists('.env') || copy('.env.example', '.env');\""
        ],
        "post-create-project-cmd": [
            "@php artisan key:generate --ansi"
        ]
    },
    "extra": {
        "laravel": {
            "dont-discover": [
                "laravel/telescope"
            ]
        }
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true,
        "allow-plugins": {
            "composer/package-versions-deprecated": true,
            "dealerdirect/phpcodesniffer-composer-installer": true
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
